{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "definitions": {
    "allEntitiesPromotion": {
      "type": "object",
      "required": ["allEntities"],
      "properties": {
        "allEntities":  {
          "type": "boolean"
        }
      }
    },
    "promotePayload": {
      "type": "object",
      "required": ["promote"],
      "properties": {
        "promote":  {
          "type": "object",
          "required": ["originApiId"],
          "properties": {
            "originApiId" : {
              "type": "integer"
            },
            "policies": {
              "oneOf": [{ "$ref": "#/definitions/allEntitiesPromotion" }]
            },
            "tiers": {
              "oneOf": [{ "$ref": "#/definitions/allEntitiesPromotion" }]
            },
            "contracts": {
              "oneOf": [{ "$ref": "#/definitions/allEntitiesPromotion" }]
            },
            "alerts": {
              "oneOf": [{ "$ref": "#/definitions/allEntitiesPromotion" }]
            }
          }
        }
      }
    },
    "specPayload": {
      "type": "object",
      "required": ["spec"],
      "properties": {
        "spec":  {
          "type": "object",
          "required": ["groupId", "assetId", "version"],
          "properties": {
            "groupId": {
              "type": "string",
              "maxLength": 256,
              "minLength": 1
            },
            "assetId": {
              "type": "string",
              "maxLength": 256,
              "minLength": 1
            },
            "version": {
              "type": "string",
              "maxLength": 256,
              "minLength": 1
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "oneOf": [
        { "$ref": "#/definitions/promotePayload" },
        { "$ref": "#/definitions/specPayload" }
      ]
    },
    {
      "dependencies": {
        "spec": ["endpoint"]
      },
      "properties": {
        "instanceLabel": {
          "type": ["string", "null"],
          "maxLength": 255,
          "minLength": 1
        },
        "endpoint":  {
          "type": "object",
          "required": ["uri", "proxyUri", "isCloudHub"],
          "properties": {
            "uri": {
              "type": ["string", "null"],
              "maxLength": 256,
              "minLength": 1
            },
            "proxyUri": {
              "type": ["string", "null"],
              "maxLength": 256,
              "minLength": 1
            },
            "isCloudHub": {
              "type": ["boolean", "null"]
            },
            "referencesUserDomain": {
              "type": ["boolean", "null"]
            },
            "responseTimeout": {
              "type": ["integer", "null"]
            },
            "deploymentType": {
              "enum": [
                "CH",
                "HY",
                "RF",
                "SM"
              ]
            },
            "muleVersion4OrAbove": {
              "type": ["boolean", "null"]
            }, 
            "proxyTemplate": {
              "type":       ["object", "null"],
              "properties": {
                "assetId": {
                  "type":      ["string", "null"],
                  "maxLength": 256,
                  "minLength": 1
                },
                "assetVersion": {
                  "type":      ["string", "null"],
                  "maxLength": 256,
                  "minLength": 1
                },
                "groupId": {
                  "type":      ["string", "null"],
                  "maxLength": 256,
                  "minLength": 1
                }
              }
            },
            "validation": {
              "type": ["string", "null"],
              "enum": [
                "NOT_APPLICABLE",
                "DISABLED",
                "ENABLED",
                "STRICT_QUERY_PARAMS"
              ]
            }
          }
        },
        "providerId": {
          "type": ["string", "null"],
          "maxLength": 255,
          "minLength": 1
        },
        "technology": {
          "enum": [
            "flexGateway",
            "mule3",
            "mule4",
            "serviceMesh"
          ]
        }
      }
    }
  ]
}
