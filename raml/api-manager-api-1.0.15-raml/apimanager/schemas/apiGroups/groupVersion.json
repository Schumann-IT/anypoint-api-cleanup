{
  "type": "object",
  "$schema": "http://json-schema.org/draft-03/schema",
  "required": true,
  "properties": {
    "name": {
      "type": "string",
      "maxLength": 45,
      "minLength": 1,
      "required": true
    },
    "instances": {
      "type": "array",
      "required": true,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "properties": {
          "apiInstances": {
            "type": "array",
            "required": true
          },
          "environmentId": {
            "type": "string",
            "required": true
          },
          "groupInstanceLabel": {
            "type": ["string", "null"],
            "required": false
          },
          "deprecated": {
            "type": "boolean",
            "required": false
          }
        }
      }
    }
  },
  "additionalProperties": false
}
